<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="LargeTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="LargeTitleInverse" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">#595959</item>
    </style>
    <style name="MediumTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="MediumTitleInverse" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">#595959</item>
    </style>
    <style name="SmallTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="SmallTitleInverse" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:textColor">#595959</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
