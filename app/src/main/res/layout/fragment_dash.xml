<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    tools:context=".DashFragment"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGrey">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:layout_height="300dp"
                    android:id="@+id/dashMap"
                    class="luan.localmotion.CustomMapView"
                    tools:context="luan.localmotion.MapsActivity"
                    android:layout_width="fill_parent"
                    android:tag="dashMap" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorDeepDark"
                    android:padding="6dp">

                    <TextView
                        style="@style/MediumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Transit"
                        android:id="@+id/textView4" />
                </RelativeLayout>

                <com.google.android.flexbox.FlexboxLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flexWrap="wrap"

                    android:id="@+id/transitView"
                    app:alignItems="stretch"
                    app:alignContent="stretch"
                    android:background="@color/colorDark">

                    <com.uber.sdk.android.rides.RideRequestButton
                        android:id="@+id/dashUberButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        uber:ub__style="black"/>
                </com.google.android.flexbox.FlexboxLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorDeepDark"
                    android:padding="6dp" >

                    <TextView
                        style="@style/MediumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Events"
                        android:id="@+id/textView" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:id="@+id/dashEventsHsv"
                    android:layout_weight="3"
                    android:layout_height="100dp"
                    android:layout_marginTop="2dp">

                </HorizontalScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorDeepDark"
                    android:padding="6dp" >

                    <TextView
                        style="@style/MediumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Places"
                        android:id="@+id/textView2" />
                </RelativeLayout>

                <com.google.android.flexbox.FlexboxLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:alignItems="flex_start"
                    app:alignContent="flex_start"
                    android:id="@+id/dashPlacesGrid">

                </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
