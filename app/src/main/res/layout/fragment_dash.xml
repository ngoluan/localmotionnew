<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context=".DashFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/background1"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        style="@style/MediumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Dashboard"
                        android:id="@+id/textView6"
                        android:layout_marginTop="@dimen/label_margin"
                        android:layout_marginBottom="@dimen/label_margin"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="false" />

                    <SearchView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/searchView2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:maxWidth="250dp" />

                </RelativeLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:verticalSpacing="2dp"
                    android:horizontalSpacing="2dp"
                    android:clipChildren="true"
                    android:columnCount="3"
                    android:rowCount="5"
                    android:id="@+id/grid"
                    android:useDefaultMargins="false">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_columnSpan="2"
                        android:layout_column="0"
                        android:layout_margin="2dp"
                        android:id="@+id/square1"></RelativeLayout>

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_columnSpan="1"
                        android:layout_column="2"
                        android:layout_margin="2dp"
                        android:id="@+id/square2"
                        android:background="@color/colorDarkClear">
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:layout_marginBottom="@dimen/img_sq_margin"
                            android:layout_marginTop="@dimen/img_sq_margin_sm"
                            android:layout_marginRight="@dimen/img_sq_margin_sm"
                            android:layout_marginLeft="@dimen/img_sq_margin_sm"
                            style="@style/SmallTitle"
                            android:src="@drawable/ubericon" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                style="@style/SmallTitle"
                                android:text="Call Uber" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <fragment
                        android:layout_height="100dp"
                        android:id="@+id/map"
                        android:layout_row="1"
                        android:layout_columnSpan="2"
                        android:layout_column="0"
                        android:layout_rowSpan="2"
                        class="luan.localmotion.CustomMapView"
                        tools:context="luan.localmotion.MapsActivity"
                        android:layout_margin="2dp"
                        android:layout_width="100dp" />

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_columnSpan="1"
                        android:layout_column="2"
                        android:layout_margin="2dp"
                        android:id="@+id/square3"
                        android:background="@color/colorSecondaryClear">
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:layout_marginBottom="@dimen/img_sq_margin"
                            android:layout_marginTop="@dimen/img_sq_margin_sm"
                            android:layout_marginRight="@dimen/img_sq_margin_sm"
                            android:layout_marginLeft="@dimen/img_sq_margin_sm"
                            style="@style/SmallTitle"
                            android:src="@drawable/bikeshareicon" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="center"
                                style="@style/SmallTitle"
                                android:text="Find Bikeshare" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_columnSpan="1"
                        android:layout_column="2"
                        android:layout_margin="2dp"
                        android:id="@+id/square4" />

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_columnSpan="1"
                        android:layout_column="0"
                        android:layout_margin="2dp"
                        android:id="@+id/square5" />

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_columnSpan="1"
                        android:layout_column="1"
                        android:layout_margin="2dp"
                        android:id="@+id/square6" />

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_columnSpan="1"
                        android:layout_column="2"
                        android:layout_margin="2dp"
                        android:id="@+id/square7" />

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Contacts"
                    android:id="@+id/textView4"
                    style="@style/MediumTitle"
                    android:layout_marginTop="@dimen/label_margin"
                    android:layout_marginBottom="@dimen/label_margin" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
