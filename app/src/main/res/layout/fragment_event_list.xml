
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="luan.localmotion.EventsFragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".EventsFragment">


    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/eventExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ael_duration="400"
            app:ael_expanded="false"
            android:background="@color/colorTertiaryClear">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Category" />

                    <Spinner
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eventCategorySpinner"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:id="@+id/eventSearchButton" />
            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/eventMapExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:ael_duration="400"
            app:ael_expanded="true">
            <fragment
                class="com.google.android.gms.maps.SupportMapFragment"
                tools:context="luan.localmotion.MapsActivity"
                android:layout_height="200dp"
                android:id="@+id/eventMap"
                android:layout_row="1"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:layout_rowSpan="2"
                android:layout_margin="1dp"
                android:layout_width="fill_parent" />
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:id="@+id/eventsExpandMapButton"
            android:src="@drawable/upicon" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/events_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@android:layout/simple_list_item_1" />

    </LinearLayout>



</RelativeLayout>
