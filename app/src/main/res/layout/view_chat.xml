<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/med"
    android:orientation="horizontal">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/personicon"
        android:id="@+id/chatProfilePic"
        app:civ_border_color="@color/colorSecondary"
        app:civ_border_width="2dp"
        android:layout_marginRight="@dimen/med" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTitleInverse"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/chatName"
            android:text="Name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallTitleInverse"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/chatDate"
            android:text="Time"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/chatContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MediumTitleInverse"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Test chat content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/chatName" />


    </RelativeLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"></TableRow>

</LinearLayout>
